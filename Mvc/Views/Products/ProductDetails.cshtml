@model CollectionItemModel

<div class="product-details">
	<div class="item">
		<div class="image-section">
			@if (Model.ImageUrl == null)
			{
				<div class="image-placeholder"></div>
			}
			else
			{
				<img src="@Model.ImageUrl" alt="Image not found" />
			}
		</div>
		<div class="body-section">
			<div class="category">@Model?.Category</div>
			<div class="name">@Model?.Title</div>
			<partial name="~/Views/Partials/_StarRatingPartial.cshtml" model="@Model?.StarRating" />
			<p class="fw-medium mt-5 mb-5">@Model?.Description</p>
			<button class="btn-theme">ADD TO CART</button>
			<div class="price">$@Model?.Price</div>
		</div>
	</div>
</div>