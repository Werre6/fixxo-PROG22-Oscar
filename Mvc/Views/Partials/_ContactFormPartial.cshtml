@model ContactFormViewModel

<div class="container mt-5">
	<h2 class="text-center mb-5">Get in contact with us</h2>
	<form method="post" asp-action="Index" novalidate>
		<div class="row mb-3">
			<div class="col">
				<input asp-for="Name" type="text" placeholder="Your name" class="form-control" />
				<span class="text-danger" asp-validation-for="Name"></span>
			</div>
			<div class="col">
				<input asp-for="Email" type="email" placeholder="Your email" class="form-control" />
				<span class="text-danger" asp-validation-for="Email"></span>
			</div>
		</div>
		<div class="row">
			<textarea asp-for="Comment" placeholder="Comments" class="form-control" rows="4"></textarea>
			<span class="text-danger" asp-validation-for="Comment"></span>
		</div>

		<div class="row">
			<div class="col">
				<button type="submit" class="btn-theme mt-4 mb-5">POST COMMENT</button>
			</div>
			<div class="col">
				<h3 class="text-normal text-center text-info mt-5 mb-5">@Model?.ConfirmationMessage</h3>
			</div>
		</div>
	</form>
</div>